<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:onClick="stopFunction"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageAnimation"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:contentDescription="@string/animation"
        app:layout_constraintBottom_toTopOf="@+id/stop"
        app:layout_constraintDimensionRatio="4:5"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/blank" />

    <Button
        android:id="@+id/Run"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="runFunction"
        android:text="@string/run"
        app:layout_constraintBaseline_toBaselineOf="@+id/stop"
        app:layout_constraintEnd_toStartOf="@+id/stop"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/stop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="stopFunction"
        android:text="@string/stop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/Run"
        app:layout_constraintTop_toBottomOf="@+id/imageAnimation" />
</androidx.constraintlayout.widget.ConstraintLayout>